#include <stdio.h>
#include <string.h>
#include <math.h>
#include <stdlib.h>

int main() {
int n;      
    int count = 0; 
    scanf("%d", &n);

    if (n <= 0) {
        printf("Please enter a positive integer.\n");
        return 1; 
    }
    
    printf("Enter a number\n%d", n);

    while (n != 1) {
        if (n % 2 == 0) {
            n = n / 2; 
        } else {
            n = 3 * n + 1;
        }
        printf("\n%d", n);
        count++;
    }
    printf("\ncount:%d", count);
    return 0;
}
