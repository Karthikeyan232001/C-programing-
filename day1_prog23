#include <stdio.h>
#include <string.h>
#include <math.h>
#include <stdlib.h>

int main() {
  int x_bottom_left, y_bottom_left, length; 
    scanf("%d", &x_bottom_left);
    scanf("%d", &y_bottom_left);
    scanf("%d", &length);
    int center_x = x_bottom_left + (length / 2);
    int center_y = y_bottom_left + (length / 2);
    printf("x-coordinate:%d\n", x_bottom_left);
    printf("y-coordinate:%d\n", y_bottom_left);
    printf("Length:%d\n", length);
    printf("Centre of the ground is at (%d,%d)\n", center_x, center_y);

    /* Enter your code here. Read input from STDIN. Print output to STDOUT */    
    return 0;
}
