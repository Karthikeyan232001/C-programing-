#include <stdio.h>
int main() {
    int n, m;
    scanf("%d %d", &n, &m); 
    int group[100];
    for (int i = 0; i < n; i++) {
        scanf("%d", &group[i]);
    }
    int buses = 0, currentLoad = 0;

    for (int i = 0; i < n; i++) {
        if (currentLoad + group[i] <= m) {
            currentLoad += group[i];
        } else {
            buses++; 
            currentLoad = group[i]; 
        }}
    if (currentLoad > 0) {
        buses++; 
    }
    printf("%d\n", buses);

    return 0;
}
