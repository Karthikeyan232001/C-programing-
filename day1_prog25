#include <stdio.h>
#include <string.h>
#include <math.h>
#include <stdlib.h>

int main() {
  char student_name[100]; 
    int mark1, mark2, mark3, mark4, mark5;
    int total_marks;
    float average_marks;
    scanf("%s", student_name);
    scanf("%d", &mark1);
    scanf("%d", &mark2);
    scanf("%d", &mark3);
    scanf("%d", &mark4);
    scanf("%d", &mark5);

    
    total_marks = mark1 + mark2 + mark3 + mark4 + mark5;
    average_marks = (float)total_marks / 5;
    printf("Name of the Student:%s\n", student_name);
    printf("Total marks:%.0d\n", total_marks); 
    printf("Average marks:%.1f\n", average_marks); 


    /* Enter your code here. Read input from STDIN. Print output to STDOUT */    
    return 0;
}
